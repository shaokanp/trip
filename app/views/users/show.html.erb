<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span9">
      <%= link_to "Start a New Trip", new_trip_path  id: "newTripBtn" %>
      <ul class="trips">
        <%= render @trips %>
      </ul>
  </div>
</div>