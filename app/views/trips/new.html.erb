<% provide(:title, 'Start a new Trip') %>
<h1>Start a new Trip</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@trip) do |f| %>

        <%= render 'shared/error_messages' %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.submit "Create", class: "btn btn-large btn-primary", id: 'create-trip-btn' %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $(function() {
        // SampleApp is the app name
        window.router = new SampleApp.Routers.TripsRouter({trips: <%= @trips.to_json.html_safe -%>, trip: <%= @trip.to_json.html_safe -%>});
        Backbone.history.start();
    });
</script>